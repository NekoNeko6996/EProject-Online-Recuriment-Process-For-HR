@model Sem3EProjectOnlineCPFH.Models.Data.Interview

@{
    Layout = "~/Views/Shared/_ScheduleLayout.cshtml";
    ViewBag.Title = "Delete Interview";
}

<div class="container mt-4">
    <h2 class="text-danger text-center">Are you sure you want to delete this interview?</h2>
    <table class="table table-bordered">
        <tr><th>ID</th><td>@Model.InterviewId</td></tr>
        <tr><th>Applicant ID</th><td>@Model.ApplicantId</td></tr>
        <tr><th>Vacancy ID</th><td>@Model.VacancyId</td></tr>
    </table>

    @using (Html.BeginForm("DeleteConfirmed", "Interview", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Interview")" class="btn btn-secondary">Cancel</a>
    }
</div>
