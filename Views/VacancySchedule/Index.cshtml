@model IEnumerable<Sem3EProjectOnlineCPFH.Models.Data.Vacancy>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Job Vacancy List";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary text-center">Job Vacancy List</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var vacancy in Model)
            {
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("Details", "VacancySchedule", new { id = vacancy.VacancyId })" class="text-decoration-none">
                        <div class="card border-1 vacancy-card">
                            <div class="card-body">
                                <div class="d-flex flex-row justify-content-between">
                                    <h5 class="card-title text-dark m-0">@vacancy.Title</h5>
                                    <span class="badge @(vacancy.Status == "Open" ? "bg-success" : "bg-danger")">
                                        @vacancy.Status
                                    </span>
                                </div>
                                <hr />
                                <p class="text-muted">VID: @vacancy.VacancyId</p>
                                <p class="text-muted mt-2">Positions Available: @vacancy.NumberOfPositions</p>
                                <p class="text-muted">Created Date: @vacancy.CreatedAt.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">No job vacancies available.</div>
    }
</div>

<!-- Bootstrap 5 CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
